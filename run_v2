#!/bin/sh
# run_v2 - Auto-generate profile based on environment detection with level filtering
# Usage: ./run_v2 [--level N]
#   --level N   : Set plan level (0=base, 1=work, 2=media, 3=all, default: 0)

SCRIPT_DIR="$(cd -- "$(dirname "$0")" && pwd)"

# Set up paths for v2
export configuration_directory="$SCRIPT_DIR/profile"
export data_directory="$SCRIPT_DIR/data"
export src_dir="$SCRIPT_DIR/src"

# Create directories
mkdir -p "$configuration_directory"

# Show usage if --help
case "$1" in
    -h|--help)
        printf "Usage: %s [--level N]\n" "$0"
        printf "  --level N   Plan level: 0=base, 1=work, 2=media, 3=all (default: 0)\n"
        exit 0
        ;;
esac

# Run the auto-create
printf "=== Configuration Manager v2 (Level-Based) ===\n\n"
"$src_dir"/create_v2 "$@"
